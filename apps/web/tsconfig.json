{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@components/cards/*": ["components/cards/*"],
      "@repo/ui/*": ["../../packages/ui/*"],
      "@utils/*": ["../../packages/utils/src/*"]
    },
    "plugins": [
      {
        "name": "next",
        "jsx": "preserve",
        "types": ["node", "react", "react-dom", "next"]
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
