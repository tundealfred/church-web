{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next",
        "jsx": "preserve",
        "types": ["node", "react", "react-dom", "next"],
        "baseUrl": ".",
        "paths": {
          "@repo/ui/*": ["../../packages/ui/*"]
        }
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
