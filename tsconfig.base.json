{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@church-web/*": ["packages/*/src"],
      "@shared-types": ["packages/shared-types/src"]
    }
  },
  "exclude": ["node_modules"]
}